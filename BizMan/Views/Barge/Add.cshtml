@model BizMan.Models.AddBargeViewModel

@{
    ViewBag.Title = "Thêm sà lan";
    Layout = "~/Views/Shared/Admin.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>&nbsp;</h1>
    <ol class="breadcrumb">
        <li><a href="/"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-sm-6">
            <div class="box box-info" style="min-width:520px;">
                <div class="box-header with-border text-red">
                    <i class="fa fa-plus-square"></i>
                    <h4 class="box-title text-bold">Nhập thông tin sà lan</h4>
                    <div class="box-tools pull-right">
                        <button class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="" data-original-title="Collapse"><i class="fa fa-caret-up"></i></button>
                    </div>
                </div>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <div class="box-body form-horizontal">
                        <div class="form-group row">
                            <div class="control-label col-sm-4">
                                Số hiệu:
                            </div>
                            <div class="editor-field col-sm-8">
                                @Html.TextBoxFor(model => model.BargeCode,
                                    new
                                    {
                                        @class = "form-control",
                                        @placeholder = "Số hiệu",
                                        @style = "width:306px;"
                                    })
                                @Html.ValidationMessageFor(model => model.BargeCode)
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="control-label col-sm-4">
                                Khối bán:
                            </div>
                            <div class="editor-field col-sm-8">
                                @Html.TextBoxFor(model => model.VolumeRevenue, new
                                    {
                                        @class = "form-control number-input text-right",
                                        @placeholder = "0",
                                        @style = "width:100px;"
                                    })
                                @Html.ValidationMessageFor(model => model.VolumeRevenue)
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="control-label col-sm-4">
                                Khối mỏ Cát lấp:
                            </div>
                            <div class="editor-field col-sm-8">
                                @Html.TextBoxFor(model => model.VolumePurchaseFillingSand, new
                                    {
                                        @class = "form-control number-input text-right",
                                        @placeholder = "0",
                                        @style = "width:100px;"
                                    })
                                @Html.ValidationMessageFor(model => model.VolumePurchaseFillingSand)
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="control-label col-sm-4">
                                Khối mỏ Cát vàng:
                            </div>
                            <div class="editor-field col-sm-8">
                                @Html.TextBoxFor(model => model.VolumePurchaseGoldSand, new
                                    {
                                        @class = "form-control number-input text-right",
                                        @placeholder = "0",
                                        @style = "width:100px;"
                                    })
                                @Html.ValidationMessageFor(model => model.VolumePurchaseGoldSand)
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="control-label col-sm-4">
                                Chú thích:
                            </div>
                            <div class="editor-field col-sm-8">
                                @Html.TextAreaFor(model => model.Description,
                                    new
                                    {
                                        @class = "form-control",
                                        @style = "width:306px;"
                                    })
                                @Html.ValidationMessageFor(model => model.Description)
                            </div>
                        </div>
                    </div>
                    <div class="box-body">
                        <div class="form-group row">
                            <div class="editor-field col-sm-8 col-sm-offset-4">
                                <button class="btn btn-primary" type="submit" style="width:85px;">Lưu <i class="fa fa-arrow-circle-right"></i></button>
                                <button class="btn btn-warning" type="reset" style="width:85px;">Nhập lại <i class="fa fa-refresh"></i></button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section><!-- /.content -->
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <!--JQuery number-->
    <script src="~/Scripts/jquery.number.min.js"></script>
    <script>

        // The page DOM is ready
        $(document).ready(function () {
            // setup number input
            $(".number-input").number(true, 0);
        })

    </script>
}

